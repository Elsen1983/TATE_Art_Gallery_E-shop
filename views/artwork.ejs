<% include head %>
<article>
    <div style="font-size: 1.5em; text-align: center;" >
        <p style="font-size: 1.2em; padding-top: 6em;">Selected art details</p>
    </div>
    <!-- displays the image details -->
    <div id="artDiv"
         style="background-color: #111;
                border: darkgray 5px solid;
                width: 80%;
                height: 70%;
                margin: auto;
                padding: 1em;

    ">
        <img src="<%= artwork.thumbnailUrl %>"
             style="float: left; padding: 2em; margin: 1em; border: darkgray 2px solid;">
        <div style="color: white; padding-left: 20em; margin-top:1em; text-align: left; font-weight: bold;">
            <h3>"<%= artwork.title %>"</h3>
            <h5>Artist: <%= artwork.artist %></h5>
