<% include head %>
<article>
    <div style="font-size: 1.5em; text-align: center;" >
        <p style="font-size: 1.2em;  padding-top: 6em;">List of Artists</p>
    </div>
    <ul style="border: darkgray 5px solid; width: 90%; margin: auto;padding-top: 3em; padding-bottom: 3em; background-color: #111;" >
        <p> </p>
        <!-- loops over each artists and renders it -->
        <% artists.forEach((artists) => { %>
        <li style="width: 30%;display: inline; float: right;">
            <a href="/artists/<%= artists.name %>">
                <p style="color: white; font-weight: bold; float: left;"><%= artists.name %></p>
            </a>
        </li>
        <p> </p>
        <% }) %>
    </ul>
</article>
<% include foot %>